<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_gravity="right"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product"
        android:textSize="35sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold_font"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_gravity="right"
            android:src="@drawable/logo"
            android:layout_weight="1"/>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:id="@+id/uploadButton"
        android:fontFamily="@font/bold_font"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_gravity="end"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reg_font"
        android:textColor="@color/darkGrey"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Product Name"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:id="@+id/productNameText"
        android:background="@drawable/rounded_textview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reg_font"
        android:textColor="@color/darkGrey"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Product Id"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productCodeText"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:background="@drawable/rounded_textview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reg_font"
        android:textColor="@color/darkGrey"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionText"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:background="@drawable/rounded_textview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reg_font"
            android:textColor="@color/darkGrey"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Starting Price"
            android:textSize="18dp"
            android:layout_marginBottom="-15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startingPriceText"
            android:inputType="number"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:background="@drawable/rounded_textview"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reg_font"
            android:textColor="@color/darkGrey"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Buy Now"
            android:textSize="18dp"
            android:layout_marginBottom="-15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buyNowText"
            android:inputType="number"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:background="@drawable/rounded_textview"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reg_font"
        android:textColor="@color/darkGrey"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Listing Expiry Date"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateText"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:inputType="date"
        android:hint="mm/dd/yyyy"
        android:background="@drawable/rounded_textview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reg_font"
        android:textColor="#FF0000"
        android:id="@+id/errorMsg"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Please fill out all fields"
        android:textSize="18dp"
        android:visibility="invisible"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List"
        android:id="@+id/ListButton"
        android:fontFamily="@font/bold_font"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/black"
        android:padding="10dp"/>

</LinearLayout>